<resources>

    <!-- Base application theme. -->

    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBarOverlay">true</item>
        <item name="android:typeface">normal</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="HomeTabLayoutTextApprearance" parent="@style/TextAppearance.CustomFontSemiBold">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="AppEditTextSectionTitle" parent="@style/TextAppearance.CustomFontRegular">
        <item name="android:textColor">@color/signup_section_title</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="AppEditText" parent="@style/TextAppearance.CustomFontBold">
        <item name="android:background">@drawable/rounded_corners_app_green_edittext_bg</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lines">1</item>
        <item name="android:paddingBottom">8.8dp</item>
        <item name="android:paddingTop">11.5dp</item>
        <item name="android:paddingLeft">9.6dp</item>
        <item name="android:paddingRight">9.6dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_shade_4</item>
        <item name="android:textSize">15.4sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppEditTextPassword" parent="@style/AppEditText">
        <item name="android:maxLength">@integer/password_max_char</item>
        <item name="android:inputType">textPassword</item>
    </style>


    <style name="AppGreenButtonRoundedCorner" parent="@style/TextAppearance.CustomFontBold">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/rounded_corners_app_green_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <integer name="password_max_char">8</integer>
    <integer name="password_min_char">6</integer>

       <!-- <style name="Theme.Transparent" parent="AppThemeNoActionBar">
            <item name="android:windowIsTranslucent">true</item>
            <item name="android:windowBackground">@android:color/transparent</item>
            <item name="android:windowContentOverlay">@null</item>
            <item name="android:windowNoTitle">true</item>
            <item name="android:windowIsFloating">true</item>
            <item name="android:backgroundDimEnabled">true</item>
        </style>-->


    <style name="ThemeTransparentStatusBar" parent="@style/AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:typeface">normal</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.Transparent" parent="ThemeTransparentStatusBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
