<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@color/white"
        android:id="@+id/ll_meal_and_points_container">


    <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
    >
        <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/placeholder_image_small"
                android:scaleType="centerCrop"
                android:id="@+id/sv_meal_and_points"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corners_black_transparent"
                android:src="@drawable/ic_checked"
                android:scaleType="center"
                android:id="@+id/iv_meal_and_points_selected"
                android:visibility="gone"
                tools:visibility="visible"
                tools:ignore="ContentDescription">

        </ImageView>


    </FrameLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15.4sp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                tools:text="Seasonal Tastes "
                style="@style/TextAppearance.CustomFontExtraBold"
                android:maxLines="1"
                android:id="@+id/tv_meal_and_points_name"

        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.4sp"
                android:textColor="#000000"
                android:gravity="left"
                tools:text="Have a Hot and Sour soup bowl"
                android:layout_marginTop="2dp"
                style="@style/TextAppearance.CustomFontRegular"
                android:alpha=".9"
                android:id="@+id/tv_meal_and_points_desc"

        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.4sp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                tools:text="500 Points "
                style="@style/TextAppearance.CustomFontBold"
                android:layout_marginTop="@dimen/margin_dp_10"
                android:background="@drawable/rounded_corners_app_blue_button"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:id="@+id/tv_meal_and_points"

        />
    </LinearLayout>

</LinearLayout>