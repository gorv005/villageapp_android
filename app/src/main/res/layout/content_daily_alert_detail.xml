<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#8fc34d"
            android:text="@string/mark_as_read_option_will_help_you_earn_point"
            style="@style/TextAppearance.CustomFontBold"
            android:drawableLeft="@drawable/ic_information"
            android:drawablePadding="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:includeFontPadding="false"
            android:drawableStart="@drawable/ic_information"
            android:id="@+id/tv_earn_free_points_info"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:textColor="#000000"
                style="@style/TextAppearance.CustomFontExtraBold"
                tools:text="Top 5 reasons you\nshould go for plant\nbased diet"
                android:layout_toLeftOf="@+id/ll_container_save_mark"
                android:layout_alignParentLeft="true"
                android:layout_toStartOf="@+id/ll_container_save_mark"
                android:layout_alignParentStart="true"
                android:id="@+id/tv_title"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:id="@+id/ll_container_save_mark"
                android:layout_alignParentEnd="true">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_save"
                    android:src="@drawable/ic_bookmarked_false"
                    android:padding="8dp"
                    tools:ignore="ContentDescription"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_mark_read"
                    android:src="@drawable/ic_mark_read"
                    android:padding="8dp"
                    tools:ignore="ContentDescription"
            />

        </LinearLayout>


    </RelativeLayout>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:lineSpacingExtra="7sp"
            android:layout_marginTop="15dp"
            style="@style/TextAppearance.CustomFontRegular"
            android:id="@+id/tv_content"
            tools:text="@string/dummy_string_xxl"
    />

</LinearLayout>