<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/new_password"
            style="@style/AppEditTextSectionTitle"
    />


    <EditText
            android:id="@+id/edt_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_password"
            android:imeOptions="actionDone"
            style="@style/AppEditTextPassword"
            android:importantForAutofill="no" tools:targetApi="o"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/confirm_password"
            style="@style/AppEditTextSectionTitle"
    />


    <EditText
            android:id="@+id/edt_cnfrm_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/confirm_password"
            android:imeOptions="actionDone"
            style="@style/AppEditTextPassword"
            android:importantForAutofill="no" tools:ignore="UnusedAttribute"/>
</merge>